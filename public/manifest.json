{
  "short_name": "Youtube to Genius",
  "name": "Youtube to Genius lyrics",
  "description": "An extension to search the lyrics of the current music that you are listening on youtube",
  "manifest_version": 3,
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Youtube to Genius"
  },
  "permissions": [
    "https://*/*",
    "activeTab",
    "scripting"
  ],
  "icons": {
    "8": "./assets/logo-8.png",
    "16": "./assets/logo-16.png",
    "32": "./assets/logo-32.png",
    "48": "./assets/logo-48.png",
    "128": "./assets/logo-128.png",
    "800": "./assets/logo.png"
  },
  "matches": [
    "*://youtube.com/*"
  ],
  "start_url": ".",
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#ffffff"
}