{
  "name": "web-extension",
  "version": "0.1.0",
  "private": false,
  "author": "matheusbbarni",
  "dependencies": {
    "@rescript/react": "^0.10.3",
    "@ryyppy/rescript-promise": "^2.1.0",
    "axios": "^0.21.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rescript-js": "^0.7.0"
  },
  "scripts": {
    "build:dev": "webpack --mode development --watch --config webpack.config.js",
    "build:prod": "webpack --mode productio --config webpack.config.js",
    "res:build": "yarn res:clean && rescript",
    "res:start": "rescript build -w",
    "res:deps": "rescript build -with-deps",
    "res:clean": "rescript clean"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@swc/core": "^1.2.219",
    "@types/axios": "^0.14.0",
    "@types/chrome": "0.0.154",
    "@types/node": "^16.7.10",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "css-loader": "^6.7.1",
    "postcss": "^8.4.14",
    "postcss-loader": "^7.0.1",
    "postcss-preset-env": "^7.7.2",
    "rescript": "^9.1.4",
    "style-loader": "^3.3.1",
    "swc-loader": "^0.2.3",
    "tailwindcss": "^3.1.6",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  }
}
